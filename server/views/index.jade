- var controller_name = '';

mixin body-ng-controller
  if (controller_name)
    body(data-ng-controller='#{controller_name}')
      block
  else
    body
      block

doctype html5
html(lang='en', data-ng-app='app')
  head
    base(href='/')
    title CC Demo
    block header-stylesheets

    link(rel='dns-prefetch', href='//ajax.googleapis.com')
    link(rel='dns-prefetch', href='//fonts.googleapis.com')
    link(rel='dns-prefetch', href='//maxcdn.bootstrapcdn.com')

    link(rel='stylesheet', href='//fonts.googleapis.com/css?family=Open+Sans:400,700')
    link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-alpha/css/bootstrap.min.css')
    link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css')
    
    link(rel='stylesheet', href='/css/style.css')
  body
    .header
        h1 Here be a header
    .clearfix    
    .container-fluid
      nav.navbar.navbar-dark.bg-inverse
        button.navbar-toggler.hidden-sm-up(type='button', data-toggle='collapse', data-target="#exCollapsingNavbar")
          | &#9776;
        .collapse.navbar-toggleable-xs(id='exCollapsingNavbar')
          ul.nav.navbar-nav
            li.active.nav-item
              a.nav-link(ui-sref='Summary') Summary
            li.nav-item 
              a.nav-link(ui-sref='Activity') Activity
            li.nav-item
              a.nav-link(ui-sref='Visits') Visits
            li.nav-item
              a.nav-link(ui-sref='Physicians') Physicians
            li.nav-item.invisible
              a.nav-link(ui-sref='Patients') Patients
      .container-fluid    
        .row
          .col-sm-12.col-md-12.col-lg-12
            div(data-ui-view='main')
    block body-scripts
      script(src='//ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js')
      script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js')
      script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular-resource.min.js')
      script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular-route.min.js')
      script(src='//cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.15/angular-ui-router.min.js')
      script(src='//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-alpha/js/bootstrap.min.js')
      script(src='js/script.min.js')
