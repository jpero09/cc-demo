- var controller_name = '';

mixin body-ng-controller
  if (controller_name)
    body(data-ng-controller='#{controller_name}')
      block
  else
    body
      block

doctype html5
html(lang='en', data-ng-app='app')
  head
    base(href='/')
    title CC Demo
    block header-stylesheets

    link(rel='dns-prefetch', href='//ajax.googleapis.com')
    link(rel='dns-prefetch', href='//fonts.googleapis.com')
    link(rel='dns-prefetch', href='//maxcdn.bootstrapcdn.com')

    link(rel="stylesheet"  href="//fonts.googleapis.com/css?family=Roboto")
    link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-alpha/css/bootstrap.min.css')
    link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css')

    link(rel='stylesheet', href='/css/style.css')
  body
    .header
      .row
        .col-sm-1.col-md-1.col-lg-1
        .col-sm-3.col-md-3.col-lg-3
          .input-group
            input(type="text", placeholder="Search for anything" aria-describedby="mag-ico").form-control
            span(id="mag-ico").input-group-addon
              .fa-stack
                i.fa.fa-circle.fa-stack-2x
                i.fa.fa-search.fa-stack-1x
        .col-sm-7.col-md-7.col-lg-7
          .pull-left
            button.hidden-sm-up.navbar-toggler(type='button', data-toggle='collapse', data-target="#exCollapsingNavbar")
              | &#9776;
          .pull-right
            i.fa.fa-th.fa-lg.m-r
            .fa-stack
              i.fa.fa-circle.fa-stack-2x
              i.fa.fa-bell.fa-stack-1x
        .col-sm-1.col-md-1.col-lg-1
      .row.m-t-lg
        .col-sm-1.col-md-1.col-lg-1
        .col-sm-3.col-md-3.col-lg-3
        .col-sm-7.col-md-7.col-lg-7
          nav.navbar
            .collapse.navbar-toggleable-xs(id='exCollapsingNavbar')
              ul.nav.navbar-nav
                li.nav-item
                  a.nav-link.active(ui-sref='summary') Summary
                li.nav-item
                  a.nav-link(ui-sref='activity') Activity
                li.nav-item
                  a.nav-link(ui-sref='visits') Visits
                li.nav-item
                  a.nav-link(ui-sref='physicians') Physicians
                li.nav-item
                  a.nav-link(ui-sref='patients') Patients
                li.nav-item
                  a.nav-link(ui-sref='patients') Complaints
                li.nav-item
                  a.nav-link(ui-sref='patients') Diagnoses
                li.nav-item
                  a.nav-link(ui-sref='patients') Medications
                li.nav-item
                  a.nav-link
                    span More
                    i.fa.fa-caret-down.m-l
          .col-sm-1.col-md-1.col-lg-1
    .clearfix
    .container-fluid
      .row
        .col-sm-1.col-md-1.col-lg-1
          a(href='/', id='lnkBack').text-muted
            i.fa.fa-long-arrow-left
            span Back
        .col-sm-3.col-md-3.col-lg-3
          p HERE BE MAP
        .col-sm-7.col-md-7.col-lg-7
          div(data-ui-view='main')
        .col-sm-1.col-md-1.col-lg-1
    block body-scripts
      script(src='//ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js')
      script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js')
      script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular-resource.min.js')
      script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular-route.min.js')
      script(src='//cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.15/angular-ui-router.min.js')
      script(src='//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-alpha/js/bootstrap.min.js')
      script(src="https://www.google.com/jsapi?autoload={'modules':[{'name':'visualization','version':'1.1','packages':['corechart']}]}")

      script(src='js/script.min.js')
