body
  background-color #FFFFFF
  font-family Roboto

// MASTER INDEX
.header
  padding-top 10px
  margin-bottom 20px
  background-color $main-color
  color #FFFFFF
  box-shadow 0 0 4px rgba(0,0,0,.14), 0 4px 8px rgba(0,0,0,.28)
  input
    border 0px
    background-color transparent
    color #FFFFFF
    border-bottom 1px solid #FFFFFF
  .input-group-addon
    border 0px
    background-color transparent
    border-bottom 1px solid #FFFFFF
    padding 0px
  .fa-stack-2x
    color #FFFFFF
  .fa-stack-1x
    color $main-color
  .navbar
    padding 0px !important
    a
      color #EEEEEE !important
      text-transform uppercase
      font-size 14px
      cursor pointer
      &:hover
        color #FFFFFF !important
      &.active
        color #FFFFFF !important
        border-bottom 5px solid darken($main-color, 20%)

#lnkBack
  text-transform uppercase
  i
    margin-right 5px

// General
.module
  border 1px solid #eeeeee
  border-radius 5px
  padding 20px
  margin 10px 0px
  box-shadow 0 0 4px rgba(0,0,0,.14), 0 4px 8px rgba(0,0,0,.28)