body
  background-color #FFFFFF
  font-family Roboto
a
  color $main-color

// MASTER INDEX
.header
  padding-top 10px
  margin-bottom 20px
  background-color $main-color
  color #FFFFFF
  box-shadow 0 0 4px rgba(0,0,0,.14), 0 4px 8px rgba(0,0,0,.28)
  input
    border 0px
    background-color transparent
    color #FFFFFF
    border-bottom 1px solid #FFFFFF
  .input-group-addon
    border 0px
    background-color transparent
    border-bottom 1px solid #FFFFFF
    padding 0px
  .fa-stack-2x
    color #FFFFFF
  .fa-stack-1x
    color $main-color
  .navbar
    padding 0px !important
    a
      color #EEEEEE !important
      text-transform uppercase
      font-size 14px
      cursor pointer
      &:hover
        color #FFFFFF !important
      &.active
        color #FFFFFF !important
        border-bottom 5px solid darken($main-color, 20%)

#lnkBack
  text-transform uppercase
  i
    margin-right 5px

// General
.module
  border 1px solid #eeeeee
  border-radius 5px
  padding 20px
  margin 10px 0px
  box-shadow 0 0 4px rgba(0,0,0,.14), 0 4px 8px rgba(0,0,0,.28)

// Summary
.hBar
  width 100%
  height 13px
  display block
  clear both
  span
    height 13px
    width 0
    display block
    float none

.rank-1
  background $main-color
.rank-2
  background lighten($main-color, 20%)
.rank-3
  background lighten($main-color, 30%)
.rank-4
  background lighten($main-color, 45%)
.rank-5
  background lighten($main-color, 65%)