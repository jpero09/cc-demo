body
  background-color #FFFFFF
  font-family Roboto
  font-size 14px
a
  cursor pointer
  color $main-color

// MASTER INDEX
.header
  padding-top 10px
  margin-bottom 20px
  background-color $main-color
  color #FFFFFF
  box-shadow 0 0 4px rgba(0,0,0,.14), 0 4px 8px rgba(0,0,0,.28)
  input
    border 0px
    background-color transparent
    color #FFFFFF
    placeholder(color #EEEEEE,)
    border-bottom 1px solid #FFFFFF
    border-radius 0px
    &:focus
      border-bottom 1px solid #FFFFFF
  .input-group-addon
    border 0px
    background-color transparent
    border-bottom 1px solid #FFFFFF
    border-radius 0px
    padding 0px
  .fa-stack-2x
    color #FFFFFF
  .fa-stack-1x
    color $main-color
  .fa-search
    margin-top -2px
  .navbar
    padding 0px !important
    a
      color #EEEEEE !important
      text-transform uppercase
      font-size 12px
      &:hover
        color #FFFFFF !important
      &.active
        color #FFFFFF !important
        border-bottom 5px solid darken($main-color, 20%)

#lnkBack
  text-transform uppercase
  i
    margin-right 5px

// General
.module
  border 1px solid #eeeeee
  border-radius 5px
  padding 20px
  margin 10px 0px
  box-shadow 0 0 4px rgba(0,0,0,.14), 0 4px 8px rgba(0,0,0,.28)
.ellipsed-text
  text-overflow ellipsis
  overflow hidden
  white-space nowrap
.overflow-hidden
  overflow hidden

// Summary
.dept-card
  margin-top -80px
  background-color #FFFFFF
  height 100%
  padding 10px
  h1
    font-size 26px
  h6
    font-size 14px
  a
    font-size 12px
    i
      margin-right 5px
  #map
    margin 0 -11px
    height 115px
  .border-bottom
    border-bottom 1px solid #E6E6E6
    margin 15px -11px

.stat
  font-size 16px
  font-weight bold
.stat-label
  font-size 10px
.hBar
  width 100%
  height 13px
  display block
  clear both
  span
    height 13px
    width 0
    display block
    float none
.col-pad-5
  padding-right 5px
  padding-left 5px

.rank-1
  background $main-color
.rank-2
  background lighten($main-color, 20%)
.rank-3
  background lighten($main-color, 30%)
.rank-4
  background lighten($main-color, 45%)
.rank-5
  background lighten($main-color, 65%)